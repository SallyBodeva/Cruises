@model List<Cruises.ViewModels.VoyageIndexViewModel>


<div class="jumbotron">
    <h2 class="display-4">Most expensive voyages</h2>
    <hr />
    <div class="container">
        <div class="row mx-auto ">
            @foreach (var item in Model)
            {
                    <div class="card mx-auto my-1" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">From harbour: @item.Harbour</p>
                        <p class="card-text">To harbour: @item.DestinationHarbour</p>
                        <p class="card-text">Duration: @item.Duration</p>
                        <p class="card-text">Ship name: @item.Ship</p>
                        <p class="card-text">Ticket price: @item.TicketPrice</p>
                        <img class="img-thumbnail" src="@item.ImageURL" />
                        @*<a href="#" class="btn btn-primary">Go somewhere</a>*@
                        </div>
                    </div>
            }
        </div>
    </div>
</div>